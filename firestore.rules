rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{uid} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid == uid;
    }

    match /attendances/{aid} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid == uid;
    }

    match /{document=**} {
      allow read, write;
    }
  }
}